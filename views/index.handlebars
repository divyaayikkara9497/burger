<div class="container">
	<div class="jumbotron">
		<h1> Eat-Da-Burger!</h1>
	</div>

	<div class="row">
		<div class="col-md-6">
			<div class="panel-panel default">
				<ul class="list-group">
				{{#each burgers}}
					{{#unless this.devoured}}
					<li class="list-group-item">
						<div class="input-group">
							<p class="lead"> {{this.burger_name}} </p>
							<span class="input-group-btn">
								<form action="api/burgers/update/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button class="btn btn-default" type="submit"> EAT IT! </button>
								</form>
							</span>
						</div>
					</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
		</div>

		<div class="col-md-6">
			<div class="panel panel-default">
				<h2> Eaten Burgers! </h2>
				<ul class="list-group">
				{{#each burgers}}
					{{#if this.devoured}}
					<li class="list-group-item">
						<p class="lead">{{this.burger_name}} </p>
					</li>
					{{/if}}
				{{/each}}
				</ul>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<form class="create-update-form" action="api/burgers/create" method="POST">
				<div class="form-group">
					<h3> Enter the burger you want! </h3>
					<input type="text" name="name">
					<button class="btn-primary" id="submit" type="submit">Add Burger</button>
				</div>
			</form>
		</div>
	</div>
</div>